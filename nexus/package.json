{
  "name": "nexus",
  "displayName": "Nexus",
  "description": "VSCode Extension to visualize NextJS component tree hierarchy",
  "version": "0.5.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:parseCode",
    "onView:nexus.componentTreeView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "Nexus",
          "title": "Nexus",
          "icon": "media/heart.svg"
        }
      ]
    },
    "views": {
      "Nexus": [
        {
          "id": "nexus.componentTreeView",
          "name": "Nexus",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "nexus.parseCode",
        "title": "Parse It"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "dev": "webpack watch",
    "build": "webpack"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "babel-loader": "^8.2.3",
    "cli": "^1.0.1",
    "eslint": "^8.6.0",
    "file-loader": "^6.2.0",
    "glob": "^7.2.0",
    "jest": "^27.5.1",
    "mocha": "^9.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.4",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@fortawesome/react-fontawesome": "^0.1.17",
    "@tippyjs/react": "^4.2.6",
    "babel-plugin-macros": "^3.1.0",
    "path": "^0.12.7",
    "stream": "^0.0.2"
  }
}
